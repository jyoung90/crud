<div class="container">
  <div class="row">
    <h1>게시판</h1>
    <form action="/post/create" method="POST">
      <div class="form-group">
        <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="Title">
      </div>
      <textarea class="form-control" name="content" rows="3" placeholder="Content"></textarea><br>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <% @posts.each do |post| %>
      <p><%= post.title %> // <%= post.content %> <a href="/post/<%= post.id %>/delete">[삭제]</a></p>
    <% end %>
  </div>
</div>